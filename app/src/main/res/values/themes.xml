<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TstProj" parent="Theme.Material3.Light.NoActionBar">
        <!-- Disable dynamic colors and use fixed colors -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_color_inactive</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.TstProj" parent="Theme.Material3.Light.NoActionBar">
        <!-- Disable dynamic colors and use fixed colors -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_color_inactive</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="Base.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/primary_color_inactive</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="Base.ButtonWhite" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/grey</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="SearchBarStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="startIconTint">@color/primary_color</item>
        <item name="endIconTint">@color/primary_color</item>
        <item name="hintTextAppearance">@style/TextAppearance.App.SearchHint</item>
        <item name="hintTextColor">@color/primary_color</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="TextAppearance.App.SearchHint" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/dark_grey</item>
        <item name="colorPrimaryContainer">@color/primary_color</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
    </style>
</resources>